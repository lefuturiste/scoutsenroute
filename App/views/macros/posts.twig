{% if posts is not empty %}
    <div class="posts-mosaic">
        {% for post in posts %}
            <div class="max-w-md w-full lg:flex posts-mosaic-item">
                <a href="{{ path_for('blog.post', {id: post.id, slug: post.slug}) }}">
                    <div class="h-48 lg:h-full lg:w-48 flex-none bg-cover rounded-t lg:rounded-t-none lg:rounded-l text-center overflow-hidden"
                         style="background-image: url('{{ post.thumb_url }}');background-position-y: center;">
                    </div>
                </a>
                <div class="border-r border-b border-l border-grey-light lg:border-l-0 lg:border-t lg:border-grey-light bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal posts-mosaic-item-content">
                    <div class="mb-8">
                        <a href="{{ path_for('blog.post', {id: post.id, slug: post.slug}) }}"
                           class="text-black font-bold text-xl mb-2">{{ post.title }}</a>
                        <p class="text-grey-darker text-base">{{ short(post.summary , 100) }}... <a
                                    href="{{ path_for('blog.post', {id: post.id, slug: post.slug}) }}">Lire
                                plus</a></p>
                    </div>
                    <div class="flex items-center">
                        <img class="w-10 h-10 rounded-full mr-4" src="{{ post.user.avatar_url }}">
                        <div class="text-sm">
                            <p class="text-black leading-none">{{ post.user.username }}</p>
                            <p class="text-grey-dark">{{ timeago(post.created_at) }}</p>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endif %}
{% if posts is empty %}
    <div class="error-container error-container-sm mt-3">
        <div class="error-content">
            <div class="error-icon">
                <i class="fas fa-calendar-alt"></i>
            </div>
            <div class="error-text">
                <h3 class="error-title">Aucun articles publié à ce jour</h3>
            </div>
        </div>
    </div>
{% endif %}